        <h2 class="text-2xl font-bold mb-6 text-black">CONTACT MARAWOY VIA:</h2>

        <div class="space-y-6">
          <a href="https://g.co/kgs/wn4nWGN" class="flex items-start">
            <div class="flex-shrink-0 bg-black rounded-full p-2 mr-4">
              <MapPin className="h-5 w-5 text-white" />
            </div>
            <div>
              <p class="font-semibold">
                Brgy. Marawoy, Lipa City, Batangas, Lipa City, Philippines
              </p>
            </div>
          </a>

          <div class="flex items-start">
            <div class="flex-shrink-0 bg-black rounded-full p-2 mr-4">
              <Phone className="h-5 w-5 text-white" />
            </div>
            <div>
              <p class="font-semibold">0961 076 7175</p>
              <p class="text-sm text-gray-600">Hotline: 043 774-0571</p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0 bg-black rounded-full p-2 mr-4">
              <Mail className="h-5 w-5 text-white" />
            </div>
            <p class="font-semibold">Brgy.Marawoy@gmail.com</p>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0 bg-black rounded-full p-2 mr-4">
              <Clock className="h-5 w-5 text-white" />
            </div>
            <p class="font-semibold">OPEN 08:00 AM to 04:00PM</p>
          </div>
        </div>
      </div>

      <!-- Map Image with Blurring White Border -->
      <div class="w-full md:w-1/2 h-[400px] md:h-auto relative">
        <div class="absolute inset-0 p-4">
          <div class="relative w-full h-full overflow-hidden rounded-lg">
            <!-- Map image with circular blurring white mask -->
            <div class="relative w-full h-full bg-white">
              <img
                src="/map.png"
                alt="Marawoy Location Map"
                class="w-full h-full object-cover mask-radial-[ellipse_70%_70%_at_50%_50%] mask-radial-from-black mask-radial-to-transparent"
              />
