---
const { data } = Astro.props;

const mockData = [
  { title: "Item 1", description: "Description for item 1" },
  { title: "Item 2", description: "Description for item 2" },
  { title: "Item 3", description: "Description for item 3" },
  { title: "Item 4", description: "Description for item 4" },
];

const items = data?.items || mockData;
---

<div class="w-full flex justify-center items-center mb-6 bg-white">
  <div class="container mx-auto max-w-7xl px-8 py-4">
    <h2 class="text-xl font-bold text-gray-900 mb-6">
      {data?.title || "Featured Items"}
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {
        items.map((item) => (
          <div class="bg-white border border-gray-200 p-6 rounded-lg hover:border-gray-300 transition-colors">
            <h3 class="text-base font-medium text-gray-900 mb-2">
              {item.title}
            </h3>
            <p class="text-gray-600">{item.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</div>
